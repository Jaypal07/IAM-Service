# ===============================
# SERVER
# ===============================
SERVER_PORT=8080
SERVER_BASE_URL=http://localhost:8080
SPRING_PROFILES_ACTIVE=dev
SWAGGER_ENABLED=true

# ===============================
# OAUTH (Required for Google/GitHub Login)
# ===============================
OAUTH_REDIRECT_BASE_URL=http://localhost:8080
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===============================
# MAIL (Required for Signup/Forgot Password)
# ===============================
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password

# ===============================
# JWT (You can generate a random secret)
# ===============================
JWT_SECRET=your-256-bit-secret-key-that-is-at-least-32-characters-long
JWT_ISSUER=auth-service
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=86400

# ===============================
# FRONTEND
# ===============================
FRONTEND_BASE_URL=http://localhost:5173
FRONTEND_SUCCESS_REDIRECT=http://localhost:5173/oauth/success
FRONTEND_FAILURE_REDIRECT=http://localhost:5173/oauth/failed
